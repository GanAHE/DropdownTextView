<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayout_custom_drop_window"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <!--通用下拉框-->
    <TextView
        android:id="@+id/textView_custom_drop_window"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:layout_weight="1"
        android:ellipsize="end"
        android:minLines="1"
        android:paddingStart="2dp"
        android:text="AU300"
        android:background="@drawable/layout_bottom_border_line_black_background"/>

    <ImageView
        android:id="@+id/imageview_custom_drop_window"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:paddingStart="3dp"
        android:paddingEnd="2dp"
        android:layout_gravity="center_horizontal|bottom"
        android:src="@mipmap/select_more_down"/>

</LinearLayout>